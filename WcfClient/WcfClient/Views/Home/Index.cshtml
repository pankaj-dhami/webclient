@{
    ViewBag.Title = "Home Page";
}

<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
<style>
    .masonryConatiner {
        /*Conatiner div for the masonry tiles*/
        column-count: 4;
        column-gap: 20px;
        margin-top: 5%;
    }

    .tile {
        /*masonary tiles*/
        background-color: white;
        display: inline-block;
        margin: 0 0 20px;
        box-shadow: 0px 1px 1px 0px rgba(0, 0, 0, 0.18);
        padding: 15px;
    }
</style>

<script>
    $(document).ready(function () {

        $.ajax({
            url: 'https://graph.facebook.com/v2.11/9gag/feed?fields=full_picture%2Cmessage%2Ccaption%2Cbackdated_time%2Cdescription%2Cadmin_creator%2Cchild_attachments%2Cevent%2Ccreated_time%2Clink&limit=100'
            + '&access_token=118432768771020|aadf3c6132773575db5aa4e7a9ca84cb',
            success: function (result) {
                var innerhtml = '';
                $.each(result.data, function (key, value) {
                    innerhtml += '<div class="tile">' + '<a href="' + value.link + '" target="_blank" ><img src="' + value.full_picture + '" height="10%" width="95%" ></a>' + value.message + '</div>'
                })


                $('.masonryConatiner').html(innerhtml)


            }



        });
    });
</script>

<div class="masonryConatiner">
</div>